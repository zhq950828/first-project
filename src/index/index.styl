.index {
    width: 100%;
    height: 100%;

    // display: flex;
    // flex-direction: column;
    // justify-content: center;
    // align-items: center;
    h1 {
        text-align: center;
    }

    span {
        font-weight: 700;
        color: red;
    }

    .swiper-container {
        position: relative;
        width: 1000px;
        height: 600px;
        overflow: hidden;
        --swiper-theme-color: #ff6600;
        --swiper-pagination-color: #00ff33;

        // .swiper-pagination {
        // bottom: 0;
        // }
        .swiper-wrapper {
            position: relative;
            display: flex;
        }

        .swiper-slide {
            display: flex;
            align-items: center;
            justify-content: center;

            &-img {
                width: 1000px;
                height: 600px;
            }
        }
    }

    .father {
        width: 1000px;
        height: 500px;
        background: pink;
        display: flex;
    }

    .child1 {
        background: red;
        flex-grow: 1;
        flex-shrink: 1;
        flex-basis: 10000px;
        width: 100000px;
        // position: fixed;
        // position: sticky;
        // top: 10px;
    }

    .child2 {
        background: green;
        height: 1000px;
        // flex-grow: 1;
        // flex-shrink: 1;
        flex-basis: 100px;
        // width: 200px;
    }

    .box {
        width: 1000px;
        padding: 10px;
        box-sizing: border-box;
        border: 1px solid black;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;

        .box1 {
            position: relative;
            max-width: 200px;
            overflow: hidden;
            text-overflow: ellipsis;
            word-break: break-all;
            -webkit-line-clamp: 1;
            -webkit-box-orient: vertical;
            display: -webkit-box;
            box-sizing: border-box;
            padding: 2px;
            margin: 0 10px 10px 0;
            line-height: 20px;

            &::before {
                content: '';
                position: absolute;
                left: 0;
                top: 0;
                width: 200%;
                height: 200%;
                border: 1px solid black;
                transform-origin: 0 0;
                transform: scale(0.5);
                box-sizing: border-box;
                border-radius: 8px;
            }
        }
    }
}

.border-thin {
    &::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        width: 200%;
        height: 200%;
        border: 1px solid black;
        transform-origin: 0, 0;
        transform: scale(0.5);
        box-sizing: border-box;
    }
}